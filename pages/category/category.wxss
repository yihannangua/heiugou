page {
  height: 100%;
}
page .cates {
  height: 100%;
}
page .cates .cates_contianer {
  display: flex;
  height: calc(100vh - 100rpx);
}
page .cates .cates_contianer .left_menu {
  flex: 2;
}
page .cates .cates_contianer .left_menu .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #e2e2e2;
}
page .cates .cates_contianer .left_menu .active {
  color: var(--themeColor);
  position: relative;
}
page .cates .cates_contianer .left_menu .active::before {
  content: '';
  display: block;
  width: 10rpx;
  height: 60rpx;
  background-color: var(--themeColor);
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
page .cates .cates_contianer .right_content {
  flex: 5;
}
page .cates .cates_contianer .right_content .goods_group .goods_title {
  text-align: center;
  font-size: 36rpx;
  margin: 20rpx 0;
  color: #a3a3a3;
}
page .cates .cates_contianer .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
page .cates .cates_contianer .right_content .goods_group .goods_list navigator {
  padding: 10rpx 0;
  text-align: center;
  width: 33.33%;
}
page .cates .cates_contianer .right_content .goods_group .goods_list navigator image {
  width: 65%;
}
page .cates .cates_contianer .right_content .goods_group .goods_list navigator view {
  font-size: 24rpx;
}
